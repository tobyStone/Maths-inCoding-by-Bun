    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/public/images/linux_site_logo.PNG" sizes="32x32">
    <link href="../public/style.css" rel="stylesheet">    
    <style>
        /* Custom styles for mobile responsiveness */
        @media (max-width: 768px) {
            .imgToHover {
                width: 100%; /* Make images full width on smaller screens */
                height: auto; /* Adjust height automatically */
            }
            .math-section h1, #missionStatement h3 {
                font-size: 20px; /* Adjust title sizes for smaller screens */
            }
        }
    </style>
</head>

<body>
    <main>
    <header class="SiteHeader">
        <h1>Maths inCoding<img style = "float: right;" width="120" height = "120" src="\public\images\linux_site_logo.PNG" alt="Pi with numbers">
	</h1>
        <div id="missionStatement">
            <h3>... learning maths through coding computer games</h3>
        </div>
    </header>

<div class="content-container">


       <!-- Display sections -->

        <div class="content-container">

        <% if (clearVideoFlags) { %>
    <script>
        // This script runs when the page is loaded
        document.addEventListener('DOMContentLoaded', (event) => {
            // Loop over localStorage items
            for (let i = 0; i < localStorage.length; i++) {
                const key = localStorage.key(i);
                // Clear items that match the pattern used for video flags
                if (key.startsWith('questionsAnswered_')) {
                    localStorage.removeItem(key);
                }
            }
        });
    </script>
<% } %>



    <% if (page && page.sections) { %>
        <% page.sections.forEach(section => { %>
            <% if (section && section.id && section.title && section.imgSrc && section.imgAlt && section.link) { %>
                <div class="container">
                    <section class="math-section" id="<%= section.id %>">
                        <h1><%= section.title %></h1>
                        <div class="imgWrap">
                            <a href="<%= section.link %>">
                                <img id="<%= section.id %>_img" class="imgToHover" src="<%= section.imgSrc %>" alt="<%= section.imgAlt %>">
                            </a>
                        </div>
                    </section>
                </div>
            <% } %>
        <% }); %>
    <% } %>
</div>

